@model NihongoSekai.Web.ViewModels.RegisterViewModel
@{
    ViewBag.Title = "Create Account";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow border-0">
                <div class="card-body p-5">
                    <div class="text-center mb-4">
                        <h2 class="fw-bold text-dark">Join Nihongo Sekai</h2>
                        <p class="text-muted">Start your Japanese learning journey today</p>
                    </div>

                    @if (!ViewData.ModelState.IsValid)
                    {
                        <div class="alert alert-danger">
                            <ul class="mb-0">
                                @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                                {
                                    <li>@error.ErrorMessage</li>
                                }
                            </ul>
                        </div>
                    }

                    <form asp-controller="Account" asp-action="Register" method="post">
                        <!-- Role Selection -->
                        <div class="mb-4">
                            <label asp-for="Role" class="form-label fw-semibold">I want to:</label>
                            <div class="row g-3">
                                <div class="col-6">
                                    <input type="radio" asp-for="Role" value="Learner" id="role-learner" class="btn-check" checked />
                                    <label class="btn btn-outline-crimson w-100 h-100 p-3" for="role-learner">
                                        <div class="text-center">
                                            <i class="bi bi-book fs-2 d-block mb-2"></i>
                                            <strong>Learn Japanese</strong>
                                            <small class="d-block text-muted">Take courses and join classrooms</small>
                                        </div>
                                    </label>
                                </div>
                                <div class="col-6">
                                    <input type="radio" asp-for="Role" value="Teacher" id="role-teacher" class="btn-check" />
                                    <label class="btn btn-outline-crimson w-100 h-100 p-3" for="role-teacher">
                                        <div class="text-center">
                                            <i class="bi bi-person-badge fs-2 d-block mb-2"></i>
                                            <strong>Teach Japanese</strong>
                                            <small class="d-block text-muted">Create courses and host classrooms</small>
                                        </div>
                                    </label>
                                </div>
                            </div>
                            <span asp-validation-for="Role" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Name" class="form-label fw-semibold"></label>
                            <input asp-for="Name" class="form-control form-control-lg" placeholder="Enter your full name" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Email" class="form-label fw-semibold"></label>
                            <input asp-for="Email" class="form-control form-control-lg" placeholder="Enter your email address" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Password" class="form-label fw-semibold"></label>
                            <input asp-for="Password" class="form-control form-control-lg" placeholder="Create a strong password" />
                            <div class="form-text">Password must be at least 6 characters long</div>
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>

                        <div class="mb-4">
                            <label asp-for="ConfirmPassword" class="form-label fw-semibold"></label>
                            <input asp-for="ConfirmPassword" class="form-control form-control-lg" placeholder="Confirm your password" />
                            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                        </div>

                        <div class="mb-4">
                            <div class="form-check">
                                <input asp-for="AgreeToTerms" class="form-check-input" required />
                                <label asp-for="AgreeToTerms" class="form-check-label">
                                    I agree to the <a href="/terms" target="_blank" class="text-crimson">Terms of Service</a> 
                                    and <a href="/privacy" target="_blank" class="text-crimson">Privacy Policy</a>
                                </label>
                            </div>
                        </div>

                        <button type="submit" class="btn btn-crimson btn-lg w-100 mb-3">
                            <i class="bi bi-person-plus me-2"></i>Create Account
                        </button>
                    </form>

                    <div class="text-center mb-4">
                        <span class="text-muted">or</span>
                    </div>

                    <!-- Google OAuth Button -->
                    <a href="@Url.Action("LoginWithGoogle", "Account")" class="btn btn-outline-dark btn-lg w-100 mb-4">
                        <svg class="me-2" width="20" height="20" viewBox="0 0 24 24">
                            <path fill="#4285F4" d="M22.56 12.25c0-.78-.07-1.53-.2-2.25H12v4.26h5.92c-.26 1.37-1.04 2.53-2.21 3.31v2.77h3.57c2.08-1.92 3.28-4.74 3.28-8.09z"/>
                            <path fill="#34A853" d="M12 23c2.97 0 5.46-.98 7.28-2.66l-3.57-2.77c-.98.66-2.23 1.06-3.71 1.06-2.86 0-5.29-1.93-6.16-4.53H2.18v2.84C3.99 20.53 7.7 23 12 23z"/>
                            <path fill="#FBBC05" d="M5.84 14.09c-.22-.66-.35-1.36-.35-2.09s.13-1.43.35-2.09V7.07H2.18C1.43 8.55 1 10.22 1 12s.43 3.45 1.18 4.93l2.85-2.22.81-.62z"/>
                            <path fill="#EA4335" d="M12 5.38c1.62 0 3.06.56 4.21 1.64l3.15-3.15C17.45 2.09 14.97 1 12 1 7.7 1 3.99 3.47 2.18 7.07l3.66 2.84c.87-2.6 3.3-4.53 6.16-4.53z"/>
                        </svg>
                        Sign up with Google
                    </a>
                </div>
            </div>

            <div class="text-center mt-4">
                <p class="text-muted">
                    Already have an account? 
                    <a href="@Url.Action("Login", "Account")" class="text-crimson text-decoration-none fw-semibold">Sign in here</a>
                </p>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    
    <script>
        // Role selection interaction
        document.querySelectorAll('input[name="Role"]').forEach(radio => {
            radio.addEventListener('change', function() {
                // Update visual feedback for selected role
                document.querySelectorAll('.btn-check + label').forEach(label => {
                    label.classList.remove('active');
                });
                
                if (this.checked) {
                    this.nextElementSibling.classList.add('active');
                }
            });
        });
    </script>
}

<style>
    .btn-check:checked + .btn-outline-crimson {
        background-color: var(--bs-crimson);
        border-color: var(--bs-crimson);
        color: white;
    }
    
    .btn-outline-crimson:hover {
        background-color: var(--bs-crimson);
        border-color: var(--bs-crimson);
        color: white;
    }
</style>

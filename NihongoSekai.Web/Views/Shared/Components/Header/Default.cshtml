@model NihongoSekai.Web.ViewModels.HeaderViewModel

<nav class="navbar navbar-expand-lg navbar-light bg-white shadow-sm sticky-top">
    <div class="container">
        <!-- Logo -->
        <a class="navbar-brand fw-bold d-flex align-items-center" href="/">
            <span class="logo-icon text-crimson me-2" style="font-size: 1.5rem;">@Model.LogoIcon</span>
            <div class="d-flex flex-column">
                <span class="text-crimson">@Model.LogoText.Split(' ')[0]</span>
                <span class="text-dark">@(Model.LogoText.Split(' ').Length > 1 ? Model.LogoText.Split(' ')[1] : "")</span>
            </div>
        </a>
        
        <!-- Mobile menu toggle -->
        <button class="navbar-toggler border-0" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" 
                aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        
        <!-- Navigation -->
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav me-auto">
                @foreach (var item in Model.NavigationItems)
                {
                    <li class="nav-item">
                        <a class="nav-link @(item.IsActive ? "active text-crimson" : "")" 
                           href="@item.Href"
                           @(item.IsActive ? "aria-current=\"page\"" : "")>
                            @if (!string.IsNullOrEmpty(item.Icon))
                            {
                                <i class="@item.Icon me-1"></i>
                            }
                            @item.Text
                        </a>
                    </li>
                }
            </ul>
            
            <!-- User menu or auth buttons -->
            <ul class="navbar-nav">
                @if (Model.IsAuthenticated)
                {
                    <!-- User dropdown menu -->
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle d-flex align-items-center" href="#" role="button" 
                           data-bs-toggle="dropdown" aria-expanded="false">
                            <img src="@Model.UserAvatar" alt="@Model.UserName" 
                                 class="rounded-circle me-2 user-avatar" width="32" height="32"
                                 onerror="this.src='/images/default-avatar.png'">
                            <span class="d-none d-md-inline">@Model.UserName</span>
                        </a>
                        <ul class="dropdown-menu dropdown-menu-end shadow">
                            <li>
                                <h6 class="dropdown-header">
                                    <div class="d-flex align-items-center">
                                        <img src="@Model.UserAvatar" alt="@Model.UserName" 
                                             class="rounded-circle me-2" width="24" height="24"
                                             onerror="this.src='/images/default-avatar.png'">
                                        <div>
                                            <div class="fw-semibold">@Model.UserName</div>
                                            <small class="text-muted">@Model.UserRole</small>
                                        </div>
                                    </div>
                                </h6>
                            </li>
                            <li><hr class="dropdown-divider"></li>
                            <li>
                                <a class="dropdown-item" href="/profile">
                                    <i class="bi bi-person me-2"></i>My Profile
                                </a>
                            </li>
                            <li>
                                <a class="dropdown-item" href="/my-courses">
                                    <i class="bi bi-book me-2"></i>My Courses
                                </a>
                            </li>
                            <li>
                                <a class="dropdown-item" href="/my-classrooms">
                                    <i class="bi bi-people me-2"></i>My Classrooms
                                </a>
                            </li>
                            <li>
                                <a class="dropdown-item" href="/transactions">
                                    <i class="bi bi-credit-card me-2"></i>Transactions
                                </a>
                            </li>
                            <li>
                                <a class="dropdown-item" href="/notifications">
                                    <i class="bi bi-bell me-2"></i>Notifications
                                </a>
                            </li>
                            <li><hr class="dropdown-divider"></li>
                            <li>
                                <a class="dropdown-item" href="/settings">
                                    <i class="bi bi-gear me-2"></i>Settings
                                </a>
                            </li>
                            @if (Model.UserRole == "Admin")
                            {
                                <li>
                                    <a class="dropdown-item" href="/admin">
                                        <i class="bi bi-shield-check me-2"></i>Admin Dashboard
                                    </a>
                                </li>
                            }
                            <li><hr class="dropdown-divider"></li>
                            <li>
                                <form asp-controller="Account" asp-action="Logout" method="post" class="d-inline">
                                    <button type="submit" class="dropdown-item text-danger">
                                        <i class="bi bi-box-arrow-right me-2"></i>Sign Out
                                    </button>
                                </form>
                            </li>
                        </ul>
                    </li>
                }
                else
                {
                    <!-- Authentication buttons -->
                    <li class="nav-item">
                        <a class="nav-link" href="/Account/Login">
                            <i class="bi bi-box-arrow-in-right me-1"></i>Sign In
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="btn btn-crimson text-white ms-2 px-3" href="/Account/Register">
                            <i class="bi bi-person-plus me-1"></i>Get Started
                        </a>
                    </li>
                }
            </ul>
        </div>
    </div>
</nav>

<style>
    .navbar-brand .logo-icon {
        font-family: "Noto Sans JP", sans-serif;
        transition: transform 0.3s ease;
    }
    
    .navbar-brand:hover .logo-icon {
        transform: scale(1.1);
    }
    
    .user-avatar {
        border: 2px solid var(--bs-crimson-200);
        transition: border-color 0.3s ease;
    }
    
    .user-avatar:hover {
        border-color: var(--bs-crimson);
    }
    
    .dropdown-menu {
        border: none;
        border-radius: 0.75rem;
        min-width: 220px;
    }
    
    .dropdown-item {
        padding: 0.5rem 1rem;
        border-radius: 0.5rem;
        margin: 0.125rem 0.5rem;
        transition: all 0.2s ease;
    }
    
    .dropdown-item:hover {
        background-color: var(--bs-crimson-50);
        color: var(--bs-crimson);
    }
    
    .dropdown-item.text-danger:hover {
        background-color: var(--bs-red-50);
        color: var(--bs-red);
    }
    
    .navbar-nav .nav-link.active {
        font-weight: 600;
        position: relative;
    }
    
    .navbar-nav .nav-link.active::after {
        content: '';
        position: absolute;
        bottom: -8px;
        left: 50%;
        transform: translateX(-50%);
        width: 20px;
        height: 2px;
        background-color: var(--bs-crimson);
        border-radius: 1px;
    }
    
    @@media (max-width: 991.98px) {
        .navbar-collapse {
            border-top: 1px solid var(--bs-crimson-100);
            margin-top: 1rem;
            padding-top: 1rem;
        }
        
        .navbar-nav .nav-link.active::after {
            display: none;
        }
    }
</style>

<script>
document.addEventListener('DOMContentLoaded', function() {
    // Add scroll effect to navbar
    const navbar = document.querySelector('.navbar');
    
    window.addEventListener('scroll', function() {
        if (window.scrollY > 50) {
            navbar.classList.add('scrolled');
        } else {
            navbar.classList.remove('scrolled');
        }
    });
    
    // Close mobile menu when clicking on links
    const navLinks = document.querySelectorAll('.navbar-nav .nav-link');
    const navbarCollapse = document.querySelector('.navbar-collapse');
    
    navLinks.forEach(link => {
        link.addEventListener('click', () => {
            if (navbarCollapse.classList.contains('show')) {
                const bsCollapse = new bootstrap.Collapse(navbarCollapse);
                bsCollapse.hide();
            }
        });
    });
});
</script>

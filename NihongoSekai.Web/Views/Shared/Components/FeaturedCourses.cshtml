@model Dictionary<string, object>
@{
    var title = Model.GetValueOrDefault("title", "Featured Courses").ToString();
    var subtitle = Model.GetValueOrDefault("subtitle", "Start your Japanese journey with our most popular courses").ToString();
}

<section class="featured-courses py-5 bg-light">
    <div class="container">
        <div class="text-center mb-5">
            <h2 class="fw-bold mb-3">@title</h2>
            <p class="lead text-muted">@subtitle</p>
        </div>
        
        <div class="row g-4" id="featured-courses-container">
            <!-- Courses will be loaded dynamically -->
        </div>
        
        <div class="text-center mt-5">
            <a href="/courses" class="btn btn-crimson btn-lg px-4">
                <i class="bi bi-grid me-2"></i>View All Courses
            </a>
        </div>
    </div>
</section>

<script>
document.addEventListener('DOMContentLoaded', function() {
    // Mock featured courses data - replace with actual API call
    const featuredCourses = [
        {
            id: 1,
            title: "Japanese for Beginners: Hiragana & Katakana",
            description: "Master the fundamentals of Japanese writing systems with interactive exercises.",
            coverImage: "https://images.unsplash.com/photo-1528360983277-13d401cdc186?w=400&h=250&fit=crop",
            price: 49.99,
            rating: 4.7,
            level: "Beginner",
            studentsCount: 1247
        },
        {
            id: 2,
            title: "Conversational Japanese: Daily Life",
            description: "Learn practical Japanese for everyday situations and social interactions.",
            coverImage: "https://images.unsplash.com/photo-1545569341-9eb8b30979d9?w=400&h=250&fit=crop",
            price: 79.99,
            rating: 4.8,
            level: "Elementary",
            studentsCount: 892
        },
        {
            id: 3,
            title: "Business Japanese: Professional Communication",
            description: "Advanced course for professionals working with Japanese companies.",
            coverImage: "https://images.unsplash.com/photo-1551836022-deb4988cc6c0?w=400&h=250&fit=crop",
            price: 129.99,
            rating: 4.9,
            level: "Advanced",
            studentsCount: 456
        }
    ];
    
    const container = document.getElementById('featured-courses-container');
    
    featuredCourses.forEach(course => {
        const courseCard = `
            <div class="col-lg-4 col-md-6">
                <div class="card h-100 shadow-sm border-0 course-card">
                    <div class="position-relative">
                        <img src="${course.coverImage}" class="card-img-top" alt="${course.title}" style="height: 200px; object-fit: cover;">
                        <span class="badge bg-primary position-absolute top-0 end-0 m-3">${course.level}</span>
                    </div>
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title fw-bold">${course.title}</h5>
                        <p class="card-text text-muted flex-grow-1">${course.description}</p>
                        
                        <div class="course-meta mb-3">
                            <div class="d-flex align-items-center justify-content-between">
                                <div class="rating">
                                    <i class="bi bi-star-fill text-warning"></i>
                                    <span class="fw-semibold">${course.rating}</span>
                                    <small class="text-muted">(${course.studentsCount} students)</small>
                                </div>
                                <div class="price">
                                    <span class="h5 fw-bold text-crimson mb-0">$${course.price}</span>
                                </div>
                            </div>
                        </div>
                        
                        <div class="course-actions">
                            <a href="/courses/${course.id}" class="btn btn-crimson w-100">
                                <i class="bi bi-play-circle me-2"></i>View Course
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        `;
        
        container.innerHTML += courseCard;
    });
});
</script>

<style>
    .course-card {
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }
    
    .course-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 10px 25px rgba(0,0,0,0.15) !important;
    }
    
    .course-meta {
        font-size: 0.9rem;
    }
    
    .rating .bi-star-fill {
        color: #fbbf24;
    }
</style>
